{
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": {
            "16": "assets/ts16.png",
            "24": "assets/ts24.png",
            "32": "assets/ts32.png"
        },
        "default_title": "TabSearch",
        "default_popup": "popup.html"
    },
    "description": "Add support to the omnibox to search and jump to a tab.",
    "name": "TabSearch",
    "omnibox": { "keyword" : "tab" },
    "permissions": [ "tabs" ],
    "version": "0.1",

    "manifest_version": 2
}
